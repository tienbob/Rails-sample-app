<% provide(:title, 'Sign up') %>
<% content_for :head do %>
  <%= stylesheet_link_tag 'users_signup', 'data-turbo-track': 'reload' %>
  <%= javascript_include_tag 'users_signup', 'data-turbo-track': 'reload', defer: true %>
<% end %>

<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
      <!-- Registration Header -->
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white text-center">
          <h2 class="mb-0">
            <i class="fas fa-user-plus me-2"></i>
            Create Your Account
          </h2>
          <p class="mb-0 mt-2 opacity-75">Join our community today!</p>
        </div>
        
        <div class="card-body p-4">
          <%= form_with(model: @user, local: true, html: { class: "needs-validation", novalidate: true }) do |f| %>
            
            <!-- Error Messages -->
            <%= render 'shared/error_messages', object: @user %>

            <!-- Name Field -->
            <div class="mb-3">
              <%= f.label :name, class: "form-label fw-semibold" do %>
                <i class="fas fa-user me-2 text-muted"></i>Full Name
              <% end %>
              <%= f.text_field :name, 
                  class: "form-control #{'is-invalid' if @user.errors[:name].any?}",
                  placeholder: "Enter your full name",
                  required: true,
                  maxlength: 50 %>
              <% if @user.errors[:name].any? %>
                <div class="invalid-feedback">
                  <%= @user.errors[:name].first %>
                </div>
              <% end %>
            </div>

            <!-- Email Field -->
            <div class="mb-3">
              <%= f.label :email, class: "form-label fw-semibold" do %>
                <i class="fas fa-envelope me-2 text-muted"></i>Email Address
              <% end %>
              <%= f.email_field :email, 
                  class: "form-control #{'is-invalid' if @user.errors[:email].any?}",
                  placeholder: "Enter your email address",
                  required: true,
                  maxlength: 255 %>
              <% if @user.errors[:email].any? %>
                <div class="invalid-feedback">
                  <%= @user.errors[:email].first %>
                </div>
              <% end %>
            </div>

            <!-- Password Field -->
            <div class="mb-3">
              <%= f.label :password, class: "form-label fw-semibold" do %>
                <i class="fas fa-lock me-2 text-muted"></i>Password
              <% end %>
              <%= f.password_field :password, 
                  class: "form-control #{'is-invalid' if @user.errors[:password].any?}",
                  placeholder: "Choose a secure password",
                  required: true,
                  minlength: 6 %>
              <% if @user.errors[:password].any? %>
                <div class="invalid-feedback">
                  <%= @user.errors[:password].first %>
                </div>
              <% else %>
                <div class="form-text">
                  <i class="fas fa-info-circle me-1"></i>
                  Password must be at least 6 characters long
                </div>
              <% end %>
            </div>

            <!-- Password Confirmation Field -->
            <div class="mb-4">
              <%= f.label :password_confirmation, class: "form-label fw-semibold" do %>
                <i class="fas fa-lock me-2 text-muted"></i>Confirm Password
              <% end %>
              <%= f.password_field :password_confirmation, 
                  class: "form-control #{'is-invalid' if @user.errors[:password_confirmation].any?}",
                  placeholder: "Confirm your password",
                  required: true %>
              <% if @user.errors[:password_confirmation].any? %>
                <div class="invalid-feedback">
                  <%= @user.errors[:password_confirmation].first %>
                </div>
              <% end %>
            </div>

            <!-- Submit Button -->
            <div class="d-grid mb-3">
              <%= f.submit "Create Account", class: "btn btn-primary btn-lg" %>
            </div>

            <!-- Terms and Privacy -->
            <div class="text-center">
              <small class="text-muted">
                By creating an account, you agree to our 
                <%= link_to "Terms of Service", "#", class: "text-decoration-none" %> and 
                <%= link_to "Privacy Policy", "#", class: "text-decoration-none" %>
              </small>
            </div>

          <% end %>
        </div>
      </div>

      <!-- Login Link -->
      <div class="text-center mt-4">
        <p class="text-muted">
          Already have an account? 
          <%= link_to "Sign in here", "#", class: "text-decoration-none fw-semibold" %>
        </p>
      </div>

      <!-- Back to Home -->
      <div class="text-center mt-2">
        <%= link_to "← Back to Home", root_path, class: "btn btn-link text-muted" %>
      </div>
    </div>
  </div>
</div>