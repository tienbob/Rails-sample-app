<div id="follow_form_<%= user.id %>">
  <% if current_user.following?(user) %>
    <%= form_with(model: current_user.active_relationships.find_by(following_id: user.id),
                  html: { method: :delete, class: "d-inline" }) do |form| %>
      <%= form.submit "Unfollow", class: "btn btn-sm btn-outline-secondary" %>
    <% end %>
  <% else %>
    <%= form_with(model: Relationship.new,
                  class: "d-inline") do |form| %>
      <%= form.hidden_field :followed_id, value: user.id %>
      <%= form.submit "Follow", class: "btn btn-sm btn-primary" %>
    <% end %>
  <% end %>
</div>
