<% if object.errors.any? %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert" id="error_explanation">
    <div class="alert-heading d-flex align-items-center mb-2">
      <i class="fas fa-exclamation-triangle me-2"></i>
      <h6 class="mb-0">
        The form contains 
        <%= pluralize(object.errors.count, "error") %>
      </h6>
    </div>
    
    <div class="error-list">
      <ul class="mb-0 ps-3">
        <% object.errors.full_messages.each do |message| %>
          <li class="mb-1"><%= message %></li>
        <% end %>
      </ul>
    </div>
    
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% end %>

<style>
  #error_explanation {
    border: none;
    border-left: 4px solid #dc3545;
    background-color: #f8d7da;
    color: #721c24;
    border-radius: 8px;
    margin-bottom: 1.5rem;
  }
  
  #error_explanation .alert-heading {
    font-weight: 600;
    color: #721c24;
  }
  
  #error_explanation ul {
    list-style-type: none;
    margin: 0;
  }
  
  #error_explanation li {
    position: relative;
    padding-left: 1.2rem;
    font-size: 0.9rem;
    line-height: 1.4;
  }
  
  #error_explanation li:before {
    content: "â€¢";
    color: #dc3545;
    font-weight: bold;
    position: absolute;
    left: 0;
  }
  
  #error_explanation .btn-close {
    filter: invert(1) grayscale(100%) brightness(200%);
  }
  
  #error_explanation .btn-close:hover {
    filter: invert(1) grayscale(100%) brightness(150%);
  }
</style>
