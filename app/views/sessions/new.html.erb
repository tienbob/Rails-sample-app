<% provide(:title, "Log in") %>
<% content_for :head do %>
  <%= stylesheet_link_tag 'sessions_login', 'data-turbo-track': 'reload' %>
  <%= javascript_include_tag 'sessions_login', 'data-turbo-track': 'reload', defer: true %>
<% end %>

<div class="login-container">
  <div class="container">
    <div class="row justify-content-center align-items-center min-vh-100">
      <div class="col-md-6 col-lg-5 col-xl-4">
        <!-- Login Card -->
        <div class="login-card">
          <!-- Header -->
          <div class="login-header">
            <div class="login-icon">
              <i class="fas fa-user-circle"></i>
            </div>
            <h1 class="login-title">Welcome Back</h1>
            <p class="login-subtitle">Sign in to your account</p>
          </div>
          
          <!-- Form -->
          <div class="login-body">
            <%= form_with(scope: :session, url: login_path, local: true, html: { class: "login-form" }) do |f| %>

              <!-- Flash Messages -->
              <% if flash[:danger] %>
                <div class="alert alert-danger fade-in" role="alert">
                  <i class="fas fa-exclamation-triangle me-2"></i>
                  <%= flash[:danger] %>
                </div>
              <% end %>

              <!-- Email Field -->
              <div class="form-group">
                <div class="input-wrapper">
                  <i class="fas fa-envelope input-icon"></i>
                  <%= f.email_field :email, 
                      class: "form-input",
                      placeholder: "Enter your email address",
                      required: true,
                      autocomplete: "email" %>
                  <label class="floating-label">Email Address</label>
                </div>
              </div>

              <!-- Password Field -->
              <div class="form-group">
                <div class="input-wrapper">
                  <i class="fas fa-lock input-icon"></i>
                  <%= f.password_field :password, 
                      class: "form-input",
                      placeholder: "Enter your password",
                      required: true,
                      autocomplete: "current-password" %>
                  <label class="floating-label">Password</label>
                  <button type="button" class="password-toggle" id="togglePassword">
                    <i class="fas fa-eye"></i>
                  </button>
                </div>
              </div>

              <!-- Remember Me & Forgot Password -->
              <div class="form-options">
                <div class="remember-me">
                  <%= f.check_box :remember_me, class: "form-check-input" %>
                  <%= f.label :remember_me, "Remember me", class: "form-check-label" %>
                </div>
                <a href="#" class="forgot-password">Forgot password?</a>
              </div>

              <!-- Submit Button -->
              <div class="form-group">
                <%= f.submit "Sign In", class: "btn-login" %>
              </div>

            <% end %>
          </div>

          <!-- Footer -->
          <div class="login-footer">
            <p>Don't have an account? 
              <%= link_to "Create one here", signup_path, class: "signup-link" %>
            </p>
          </div>
        </div>

        <!-- Back to Home -->
        <div class="back-home">
          <%= link_to root_path, class: "back-link" do %>
            <i class="fas fa-arrow-left me-2"></i>Back to Home
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Background Animation -->
<div class="bg-animation">
  <div class="floating-shapes">
    <div class="shape shape-1"></div>
    <div class="shape shape-2"></div>
    <div class="shape shape-3"></div>
    <div class="shape shape-4"></div>
    <div class="shape shape-5"></div>
  </div>
</div>